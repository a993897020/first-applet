
.tag-icon{
  height: 50rpx;
  text-align: center;
  padding: 5rpx 10rpx;
  background-color: #ccc;
  margin-right: 15rpx;
  border-radius:10rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  display:inline-block;
}
.ratings-item{
  display:flex;
  margin-top: 20rpx;
}
.ratings-item .avatar{
  width: 70rpx;
  height: 70rpx;
}
.avatar image{
  width: 100%;
  height:100%;
  border-radius: 50%;
}
.ratings-item .wrapper{
  flex:1;
  margin-left: 10rpx;
}
.wrapper .name-time{
  display:flex;
  /* flex-direction: column; */
  justify-content:space-between;
  margin-bottom: 10rpx;
}
.name-time .name{
  color: #000;
  font-size: 24rpx;
}
.name-time .time{
  color: #ccc;
  font-size: 24rpx;
}
.wrapper .rate{
  display:flex;
  justify-content:flex-start;
  margin-right: 10rpx;
  margin-block-end: 10rpx;
}
.rate text{
  margin-right: 10rpx;
  font-size: 24rpx;
}
.wrapper .info{
 font-size: 24rpx;
}
.ratings-scroll{
  height: 500rpx;
}
