.shopping-wrapper{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background-color: #4c4c4c;
}
.shopping-wrapper image{
  width: 50rpx;
  height: 50rpx;
  background-color: #2e2c2c;
  border-radius: 50%;
  padding: 25rpx;
  margin-left: 20rpx;
  margin-top: -30rpx;
}
.shopping-wrapper .money{
  display:flex;
  justify-content:space-between;
}
.money .needMoney{
  margin-top: -50rpx;
  margin-left: 130rpx;
  font-size: 24rpx;
  color: #ccc;
}
.money .goMoney{
  font-size: 32rpx;
  margin-top: -55rpx;
  margin-right: 20rpx;
  font-weight: bold;
  color: #999;
}
.shopping-wrapper .buyActive{
  background-color: #ffd65d;
}