.container{
  position: fixed;
  width: 100%;
  height: 100%;
  display:flex;
  flex-direction: column;
  box-sizing: border-box;
}
.nav-wrapper{
  display: flex;
}
.nav-wrapper .item{
  flex:1;
  text-align: center;
  font-size: 24rpx;
  align-items:center;
  border-bottom: 1px solid rgba(0, 0, 0, .1);
  padding: 20rpx 0;
  position: relative;
}
.nav-wrapper .active{
  color: #febf19;
}
.nav-wrapper .line{
  width: 50rpx;
  height: 5rpx;
  position:absolute;
  left: 50%;
  margin-left: -25rpx;
  bottom: 0;
  background-color: #febf19;
}
.content-wrapper{
  /* width: 100%;
  height: 100%;
  position:fixed; */
  flex:1;
}
.content-wrapper .item-wrapper{
  display:block;
  overflow: hidden;
}
.shoppingBg{
  width: 100%;
  height: 50%;
  background-color: rgba(0,0,0,.5);
  position:fixed;
  left: 0;
  top: 0;
}
